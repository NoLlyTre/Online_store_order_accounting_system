<Window x:Class="OrderSystemEF.Views.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать заказ" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание заказа" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Товар:" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Name="ProductNameTextBlock" 
                       FontWeight="Bold" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Цена:" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Name="ProductPriceTextBlock" 
                       FontWeight="Bold" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Количество:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="QuantityTextBox" 
                     Text="1" Width="100" HorizontalAlignment="Left"/>
        </Grid>

        <Grid Grid.Row="4" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Адрес доставки:" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBox Grid.Column="1" Name="ShippingAddressTextBox" 
                     TextWrapping="Wrap" Height="60"/>
        </Grid>

        <Grid Grid.Row="5" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Телефон:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="PhoneNumberTextBox" 
                     Width="200" HorizontalAlignment="Left"/>
        </Grid>

        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Name="CreateButton" Content="Создать" 
                    Click="CreateButton_Click" 
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>

