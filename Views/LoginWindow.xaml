<Window x:Class="OrderSystemEF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Система учета заказов" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox Name="UsernameTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox"/>
        </StackPanel>

        <Button Grid.Row="3" Name="LoginButton" Content="Войти" 
                Click="LoginButton_Click" Margin="0,20,0,10" 
                Height="35" FontSize="14"/>

        <TextBlock Grid.Row="4" Name="ErrorTextBlock" 
                   Foreground="Red" TextWrapping="Wrap" 
                   Margin="0,10" Visibility="Collapsed"/>

        <StackPanel Grid.Row="5" VerticalAlignment="Bottom">
            <TextBlock Text="Нет аккаунта?" HorizontalAlignment="Center" Margin="0,10"/>
            <Button Name="RegisterButton" Content="Зарегистрироваться" 
                    Click="RegisterButton_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>

